<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="view" prefHeight="600.0" prefWidth="1000.0" styleClass="background" stylesheets="@../../css/MainTheme.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <VBox fx:id="menuOpcionesVBox" alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button id="botonMenu" fx:id="menuJugarBoton" mnemonicParsing="false" onMouseClicked="#onJugarClickAction" prefHeight="80.0" prefWidth="216.0" styleClass="menuBoton" text="Jugar" />
            <Button id="botonMenu" fx:id="menuHighscoreBoton" mnemonicParsing="false" onMouseClicked="#onHighscoreClickAction" prefHeight="80.0" prefWidth="220.0" styleClass="menuBoton" text="Highscore" />
            <Button id="botonMenu" fx:id="menuOpcionesBoton" mnemonicParsing="false" onMouseClicked="#onOpcionesClickAction" prefHeight="80.0" prefWidth="220.0" styleClass="menuBoton" text="Opciones" />
            <Button id="botonMenu" fx:id="menuSalirBoton" mnemonicParsing="false" onMouseClicked="#onSalirClickAction" prefHeight="80.0" prefWidth="220.0" styleClass="menuBoton" text="Salir" />
         </children>
         <BorderPane.margin>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </BorderPane.margin>
      </VBox>
   </left>
   <center>
      <ImageView fx:id="menuTitulo" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
         <image>
            <Image url="@../../images/test.png" />
         </image>
      </ImageView>
   </center>
</BorderPane>
